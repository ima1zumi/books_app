<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
    <p>
      <% if user_signed_in? %>
        <%= link_to t("users.layout.show"), user_path(current_user.id) %> |
        <%= link_to t("users.layout.edit"), edit_user_registration_path %> |
        <%= link_to t("users.layout.logout"), destroy_user_session_path, method: :delete %>
      <% end %>
    </p>
  </body>
</html>
