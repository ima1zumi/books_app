<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
    <p>
      <%= link_to t("directory.button.back"), root_path %> |
      <%= link_to t("reports.index.title"), reports_path %> |
      <% if user_signed_in? %>
        <%= link_to t("friendships.layout.index"), friendships_path %> |
        <%= link_to t("users.layout.show"), user_path(current_user.id) %> |
        <%= link_to t("users.layout.edit"), edit_user_registration_path %> |
        <%= link_to t("users.layout.logout"), destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to t("users.layout.login"), new_user_session_path %> |
        <%= link_to t("users.layout.new"), new_user_registration_path %>
      <% end %>
    </p>
  </body>
</html>
