<p>
  <strong><%= User.human_attribute_name(:name) %>:</strong>
  <%= User.find_by(id: @book.user_id).name %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:title) %>:</strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:memo) %>:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:author) %>:</strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= Book.human_attribute_name(:picture) %>:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<% if current_user != @book.user %>
<% if @book.user.followed_by?(current_user) %>
<p><%=link_to "フォロー済み", user_user_follow_path(@book.user_id), method: :delete %></p>
<% else %>
<p><%=link_to "フォローする", user_user_follow_path(@book.user_id), method: :post %></p>
<% end %>
<% end %>

<%= link_to t("directory.button.edit"), edit_book_path(@book) %> |
<%= link_to t("directory.button.back"), books_path %>
